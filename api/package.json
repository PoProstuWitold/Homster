{
	"name": "api",
	"version": "0.0.1",
	"description": "GraphQL API server for Homster. Written in Nest.js",
	"author": "Witold Zawada",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"prisma": {
		"schema": "./database/schema.prisma",
		"seed": "ts-node --transpile-only ./database/seed.ts"
	},
	"dependencies": {
		"@apollo/server": "^4.5.0",
		"@as-integrations/fastify": "^1.3.2",
		"@fastify/cookie": "^8.3.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/secure-session": "^6.0.0",
		"@fastify/static": "^6.9.0",
		"@nestjs/apollo": "^11.0.3",
		"@nestjs/common": "^9.3.10",
		"@nestjs/config": "^2.3.1",
		"@nestjs/core": "^9.3.10",
		"@nestjs/graphql": "^11.0.0",
		"@nestjs/platform-fastify": "^9.3.10",
		"@prisma/client": "^4.11.0",
		"argon2": "^0.30.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"fastify": "^4.14.1",
		"graphql": "^16.6.0",
		"graphql-upload-minimal": "^1.5.4",
		"pg": "^8.10.0",
		"prisma": "^4.11.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^4.4.0",
		"rxjs": "^7.8.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@nestjs/cli": "^9.3.0",
		"@nestjs/schematics": "^9.0.4",
		"@nestjs/testing": "^9.3.10",
		"@types/graphql-upload": "^16.0.0",
		"@types/jest": "29.5.0",
		"@types/node": "^18.15.3",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.7.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "29.5.0",
		"prettier": "^2.8.4",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "29.0.5",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "4.1.2",
		"typescript": "^5.0.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
