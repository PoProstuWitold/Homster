{
	"name": "api",
	"version": "0.0.1",
	"description": "GraphQL API for Homster - a library of games for young, old and hamsters",
	"author": "Witold Zawada",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prisma:generate": "npx prisma generate",
		"prisma:push": "npx prisma db push",
		"prisma:seed": "ts-node ./database/seed.ts"
	},
	"prisma": {
		"schema": "./database/schema.prisma"
	},
	"dependencies": {
		"@fastify/cookie": "^8.3.0",
		"@fastify/helmet": "^10.1.0",
		"@fastify/secure-session": "^6.0.0",
		"@nestjs/common": "^9.3.2",
		"@nestjs/config": "^2.3.0",
		"@nestjs/core": "^9.3.2",
		"@nestjs/graphql": "^10.1.7",
		"@nestjs/mercurius": "^10.1.7",
		"@nestjs/platform-fastify": "^9.3.2",
		"@prisma/client": "^4.9.0",
		"argon2": "^0.30.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"fastify": "^4.12.0",
		"graphql": "^16.6.0",
		"mercurius": "^12.0.0",
		"pg": "^8.9.0",
		"prisma": "^4.9.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^4.1.2",
		"rxjs": "^7.8.0"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@nestjs/cli": "^9.2.0",
		"@nestjs/schematics": "^9.0.4",
		"@nestjs/testing": "^9.3.2",
		"@types/jest": "29.4.0",
		"@types/node": "^18.11.19",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"@typescript-eslint/parser": "^5.50.0",
		"eslint": "^8.33.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "29.4.1",
		"prettier": "^2.8.3",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "29.0.5",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "4.1.2",
		"typescript": "^4.9.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
