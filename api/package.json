{
	"name": "api",
	"version": "0.0.1",
	"description": "GraphQL API server for Homster. Written in Nest.js",
	"author": "Witold Zawada",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json"
	},
	"prisma": {
		"schema": "./database/schema.prisma",
		"seed": "ts-node --transpile-only ./database/seed.ts"
	},
	"dependencies": {
		"@apollo/server": "^4.7.1",
		"@as-integrations/fastify": "^2.0.0",
		"@fastify/cookie": "^8.3.0",
		"@fastify/helmet": "^10.1.1",
		"@fastify/secure-session": "^6.1.0",
		"@fastify/static": "^6.10.1",
		"@nestjs/apollo": "^11.0.5",
		"@nestjs/common": "^9.4.1",
		"@nestjs/config": "^2.3.2",
		"@nestjs/core": "^9.4.1",
		"@nestjs/graphql": "^11.0.5",
		"@nestjs/platform-fastify": "^9.4.1",
		"@prisma/client": "^4.14.1",
		"argon2": "^0.30.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"fastify": "^4.17.0",
		"graphql": "^16.6.0",
		"graphql-upload-minimal": "^1.5.4",
		"pg": "^8.11.0",
		"prisma": "^4.14.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^5.0.1",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^8.0.1",
		"@nestjs/cli": "^9.5.0",
		"@nestjs/schematics": "^9.2.0",
		"@nestjs/testing": "^9.4.1",
		"@types/graphql-upload": "^16.0.0",
		"@types/jest": "29.5.1",
		"@types/node": "^20.2.1",
		"@types/supertest": "^2.0.12",
		"@typescript-eslint/eslint-plugin": "^5.59.6",
		"@typescript-eslint/parser": "^5.59.6",
		"eslint": "^8.41.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"jest": "29.5.0",
		"prettier": "^2.8.8",
		"source-map-support": "^0.5.21",
		"supertest": "^6.3.3",
		"ts-jest": "29.1.0",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "4.2.0",
		"typescript": "^5.0.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
